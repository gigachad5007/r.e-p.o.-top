    background-image: url(https://foni.papik.pro/uploads/posts/2024-09/foni-papik-pro-52gq-p-kartinki-romb-na-prozrachnom-fone-23.png);
    background-size: contain;
}

.address::before{
 content:"";
        width: 25px;
    height: 25px;
    display: inline-block;
    background-image: url(https://foni.papik.pro/uploads/posts/2024-09/foni-papik-pro-u3iu-p-kartinki-piktogramma-domik-na-prozrachnom-4.png);
    background-size: contain;
}

.tel::before{
     content:"";
        width: 25px;
    height: 25px;
